package com.krakedev;
/*
 * Comentario de varias lineas
 * */
public class TestPersona {

	public static void main(String[] args) {
		// Esto es un comentario
		//Tipo de datos cuando se crea una clases, se convierte en un tipo de dato 
		Persona p;//1: Declaro una variable tipo Persona 
		Persona p2=new Persona();
		p = new Persona();//2.Instanciar un objeto Persona, referenciarlo con p 
		//3. Acceder a los atributos
		System.out.println("nombre: "+p.nombre); //sysout+Ctrl+Espace
		System.out.println("nombre: "+p.edad);
		System.out.println("nombre: "+p.estatura);
		
		p2.nombre= "Angelina";
		System.out.println("********");
		System.out.println("p.nombre: "+p.nombre);
		System.out.println("p2.nombre: "+p2.nombre);  
		
		
		

	}

}
